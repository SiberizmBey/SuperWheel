{
  "name": "superwheel",
  "version": "1.0.1",
  "productName": "SuperWheel",
  "author": "NexaBAG Studios",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --win"
  },
  "build": {
    "appId": "com.nexabag.superwheel.launcher",
    "productName": "SuperWheel",
    "copyright": "Copyright Â© 2026 NexaBAG Studios",
    "win": {
      "target": "nsis",
      "icon": "icon.ico",
      "publisherName": "NexaBAG Studios"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "SuperWheel",
      "installerIcon": "icon.ico",
      "uninstallerIcon": "icon.ico",
      "uninstallDisplayName": "SuperWheel (NexaBAG Studios)",
      "deleteAppDataOnUninstall": true,
      "runAfterFinish": true
    },
    "asar": true,
    "files": [
      "**/*",
      "icon.ico",
      "!dist/*"
    ]
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "active-win": "^8.2.1",
    "auto-launch": "^5.0.6",
    "electron-store": "^8.1.0",
    "uiohook-napi": "^1.5.4"
  }
}